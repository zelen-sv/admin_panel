<div class="row">
  <div class="col-xs-12 col-sm-8 offset-sm-2 col-md-4 offset-md-4" style="margin-top: 150px;">
    <div class="card card-small mb-4">
      <div class="card-header border-bottom">
        <h6 class="m-0">Вход в административную часть</h6>
      </div>
      <div class="p-3">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group">
          <%= f.label :email, 'Ваш E-mail' %>
          <%= f.email_field :email,
                            autofocus: true,
                            autocomplete: "email",
                            class: "form-control",
                            placeholder: "Введите E-mail"%>
        </div>
        <div class="form-group">
          <%= f.label :password, 'Ваш пароль' %>
          <%= f.password_field :password,
                               autocomplete: "off",
                               class: "form-control",
                               placeholder: "Введите пароль"%>
        </div>
        <div class="form-group">
          <div class="form-check">
            <%= f.check_box :remember_me, class: "form-check-input" %>
            <label for="remember-me" class="form-check-label"> Запомнить меня</label>
          </div>
        </div>
        <hr />
        <div class="form-group">
          <button type="sybmit" class="btn btn-primary">Вход</button>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
